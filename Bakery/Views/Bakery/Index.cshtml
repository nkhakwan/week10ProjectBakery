@using Places.Models;

@{
  Layout = "_Layout";
}

<h1>Places Visited</h1>
@if (Model.Count == 0)
{
<p>No Places have been visited so far.</p>
}

@foreach (City city in Model)//list<Items>{{}}
{
@* <li>@city.CityName @city.Companion</li> *@
<p><a href='/places/@city.Id'>@city.CityName</a></p>
}

<button class="btn btn-light"><a href='/places/new'>Add a new item</a></button>
<br>
<br>
<form action="/places/delete" method="post">
  <button type="submit" name="button" class="btn">Clear All Items</button>
</form>