@using Bakery.Models;

@{
  Layout = "_Layout";
}

<h1>Here are all the Orders from Current Vendor</h1>
@if (Model.Count == 0)
{
<h3>This Vendor Never Ordered Before</h3>
}
@foreach (Order order in Model)
{
<p>@order.Title @order.Description @order.Price @order.Date</p>
}
