@using Bakery.Models;

@{
  Layout = "_Layout";
}

<h3>Here are all the Orders for this Vendor:</h3>

<ol>
@foreach (Order order in @Model["order"])
{
  <li><a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>@order.Title @order.Description @order.Price @order.Date</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendors list</a></p>
<p><a href='/'>Return to Main Page</a></p>






