@using Bakery.Models;

@{
  Layout = "_Layout";
}

<h3>Here are all the Orders for this Vendor:</h3>

<ol>
@foreach (Order order in @Model["order"])
{
  <li>Title: @order.Title, Description: @order.Description,  Price: @order.Price, Date: @order.Date</li>
}
</ol>

<button class="btn btn-light"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></button>
<br>
<button class="btn btn-light"><a href='/vendors'>Return to vendors list</a></button>
<br>
<button class="btn btn-light"><a href='/'>Return to Main Page</a></button>






