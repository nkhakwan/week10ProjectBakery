@using Bakery.Models;

@{
  Layout = "_Layout";
}

<h1>Vendor's List with Description </h1>

@if (Model.Count == 0)
{
<h3>Pierree No Vendors so far. Is LockDown affecting you?</h3>
}
@foreach (Vendor vendor in Model)//list<Items>{{}}
{
<p><a href='/vendors/@vendor.Id'>@vendor.Name @vendor.Description</a></p>
}
<button class="btn btn-light"><a href='/vendors/new'>Add a new Vendor</a></button>

